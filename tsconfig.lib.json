{
  "include": ["lib"],
  "extends": ["./tsconfig.base.json"],

  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "WebWorker"],
    "skipLibCheck": true,
    "types": [],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true
  }
}
